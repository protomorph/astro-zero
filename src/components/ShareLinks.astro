---
interface Props {
  title: string
  url: string
}

const {
  title,
  url,
} = Astro.props

const encodeUrl = encodeURIComponent(url)
const encodeTitle = encodeURIComponent(title)

const links = [
  {
    href: `https://www.facebook.com/sharer/sharer.php?u=${encodeUrl}`,
    name: 'Facebook',
  },
  {
    href: `https://twitter.com/intent/tweet?url=${encodeUrl}&text=${encodeTitle}`,
    name: 'Twitter',
  },
  {
    href: `https://wa.me/?text=${encodeTitle}%20${encodeUrl}`,
    name: 'WhatsApp',
  },
  {
    href: `http://pinterest.com/pin/create/button/?url=${encodeUrl}&description=${encodeTitle}`,
    name: 'Pinterest',
  },
  {
    href: `https://www.reddit.com/submit?url=${encodeUrl}&title=${encodeTitle}`,
    name: 'Reddit',
  },
  {
    href: `mailto:?subject=${title}&body=${url}`,
    name: 'Email',
  },
  {
    href: url,
    name: 'Permalink',
  },
]
