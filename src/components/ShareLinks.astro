<h2
  id="share-label"
>Share this Page on:</h2>

<ul
  aria-labelledby="share-label"
>
  {
    links.map(({ href, name }) => (
      <li>
        <a {href} aria-label={name}>
          <svg
            height="24"
            width="24"
            role="img"
            style="diaplay:block"
          >
            <use href={`#${name.toLowerCase()}`} />
          </svg>
        </a>
      </li>
    ))
  }
</ul>
